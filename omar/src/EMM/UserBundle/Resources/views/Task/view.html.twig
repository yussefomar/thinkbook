{% extends 'layout.html.twig' %}
{% block body %}
    {{parent()}}

    <div class="container well">
        <div class="row">
            <div class="col-md-9">
                <h2>{{task.title}}</h2>
                <br>
                <dl>
                    <dt>Description</dt>
                    <dd>
                        
                      {{task.description}}  
                    </dd>
                </dl>
                
                <br>
                <dl>
                    <dt>User</dt>
                    <dd>
                        
                        {{user.fullName}}
                    </dd>
                </dl>
                
                <br>
                <dl>
                    <dt>Status</dt>
                    <dd>
                        {% if task.status==0 %}
                          <span class="text-danger">Waiting</span>
                         {% elseif task.status==1 %}
                          <span class="text-success">Finish</span>
                          {% endif %}
                        
                    </dd>
                </dl>
                          
                 <br>
                <dl>
                    <dt>Created</dt>
                    <dd>
                        
                        {{task.createdAt|date('d-m-y H:i') }}
                    </dd>
                </dl>
                    
                    
                  <br>
                <dl>
                    <dt>Updated</dt>
                    <dd>
                        
                         {{task.updatedAt|date('d-m-y H:i') }}
                    </dd>
                </dl>  
                    
                          
            </div>
                    {% if is_granted('ROLE_ADMIN')%}
                    <div class="col-md-3">
                        <h3>Actions:</h3>
                        <p>
                        <a href="{{path('emm_task_edit',{id:task.id})}}" class="btn btn-primary btn-info btn-block">
                        <span class=" glyphicon glyphicon-edit"></span>
                        Edit Task
                        </a>
                        </p>
                        <p>
                            {{include('EMMUserBundle:Task:forms/form.html.twig',{form:delete_form,message:'Are you sure ?'})}}
                        </p>    
                    </div>        
                    {% endif %}

        </div>


    </div>    













{% endblock %}    

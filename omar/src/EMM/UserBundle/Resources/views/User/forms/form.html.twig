<input type="button" value="{{'Delete user'|trans}}" class="btn btn-lg btn-block btn-danger" onclick="confirmDelete()"> {# hacemos esto porque en el formulario que vamos a 
                                                                                                                        hacer no necesitamos boton porque ya lo tenemos en el index#}

{% endif %}

{{form_end(form)}}
<script>
    var message='{{message}}';
    
    function confirmDelete()
    {
        bootbox.confirm(message,function(result){  
            if(result == true)
            {
                document.form.submit();
            }
            
        });
    }
    
    
    
</script>